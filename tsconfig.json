{
    "compilerOptions": {
      "outDir": "./dist/",
      "declarationDir": "./types",
      "noImplicitAny": true,
      "declaration": true,
      "module": "ESNext",
      "lib": ["ES2018", "DOM"],
      "target": "ESNext",
      "jsx": "react",
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "strict": true,
      "experimentalDecorators": true,
      "strictFunctionTypes": true,
      "stripInternal": true,
      "paths": {
        "@/*": ["./src/*"]
      },
      "baseUrl": "."
    },
    "include": [
      "src/**/*",
      "test/**/*"
    ]
}